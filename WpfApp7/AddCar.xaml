<Window x:Class="WpfApp7.AddCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="AddCar" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Марка:" />
            <TextBox x:Name="txtMake" />
            <Label Content="Модель:" />
            <TextBox x:Name="txtModel" />
            <Label Content="Год:" />
            <TextBox x:Name="txtYear" />
            <Label Content="Цена:" />
            <TextBox x:Name="txtPrice" />
            <Button x:Name="btnAdd" Content="Добавить" Click="btnAdd_Click" />
        </StackPanel>
    </Grid>
</Window>
